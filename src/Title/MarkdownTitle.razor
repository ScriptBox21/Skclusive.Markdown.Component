@namespace Skclusive.Markdown.Component
@inherits MarkdownTitleComponent

<Component
    Tag="@Component"
    Style="@_Style"
    Class="@_Class">
    @if (Level < 4)
    {
        <MarkdownAnchor
            Style="@_AnchorStyle"
            Class="@_AnchorClass"
            LinkStyle="@_AnchorLinkStyle"
            LinkClass="@_AnchorLinkClass"
            Text="@Text" />
    } else
    {
        @Text
    }
</Component>