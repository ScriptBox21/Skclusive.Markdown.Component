@namespace Skclusive.Markdown.Component
@inherits StyleComponentBase

<Styled
    Name="MarkdownCode">

    .MarkdownCode-Root {
        display: none;
        padding: 0;
        margin-right: 0;
        margin-bottom: 8px;
    }
    @media (min-width:600px) {
        .MarkdownCode-Root {
            display: block;
        }
    }
    .MarkdownCode-Root pre {
        margin: 0px !important;
        overflow: auto;
        @* max-height: 1000px; *@
        line-height: 1.5;
    }

</Styled>